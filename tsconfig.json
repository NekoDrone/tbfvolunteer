{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "declarationDir": "build",
        "allowImportingTsExtensions": false,
        "noImplicitAny": true,
        "outDir": "dist",
        "target": "es2021",
        "module": "CommonJS",
        "strictNullChecks": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true
    },
    "include": ["src/**/*"]
}
